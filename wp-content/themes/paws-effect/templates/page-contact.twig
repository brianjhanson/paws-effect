{% extends "page.twig" %}

{% block content %}
  <div class="l-blocks l-blocks--middle">
    <div class="l-blocks__block l-blocks__block--half">
      <div class="section">
        <div class="section__title">
          <h1 class="section-title">Contact Us</h1>
        </div>
        {% if post.get_field('page_introduction') %}
        <div class="section__body">
          <div class="lead">
            {{ post.get_field('page_introduction') }}
          </div>
        </div>
        {% endif %}
      </div>
    </div>
    <div class="l-blocks__block l-blocks__block--half bg-light-blue">
      <div class="section">
        <div class="rich-text">
          {{ post.content }}
        </div>
      </div>
    </div>
  </div>

  {% include ['_partials/_page-' ~ post.post_name ~ '.twig'] ignore missing %}
{% endblock %}